{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react/no-unescaped-entities": "error",
    "react/jsx-key": "error",
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "error",
    "prefer-const": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "out/**",
    "build/**",
    "next-env.d.ts",
    "prisma/**"
  ]
}
